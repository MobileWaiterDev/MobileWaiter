<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MobileWaiter" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#514E59</item>
        <item name="colorPrimaryVariant">#514E59</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="Theme.MobileWaiter.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MobileWaiter.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ToolbarMenu" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ToolbarTitle" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.MobileWaiter.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">#828896</item>
    </style>
    <style name="Widget.App.Switch" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="materialThemeOverlay">@style/SwitchButton</item>
    </style>
    <style name="SwitchButton" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="android:textSize">20sp</item>
        <item name="colorOnSurface">@color/gray</item>
        <item name="colorSecondary">@color/primary_blue_500</item>
    </style>
</resources>