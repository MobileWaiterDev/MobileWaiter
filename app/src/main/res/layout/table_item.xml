<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/table_item_linear_layout_height"
    android:orientation="vertical"
    android:padding="@dimen/table_item_linear_layout_padding">

    <TextView
        android:id="@+id/table_name"
        android:layout_width="@dimen/table_item_table_size"
        android:layout_height="@dimen/table_item_table_size"
        android:layout_gravity="center"
        android:background="@color/blue"
        android:gravity="center_vertical|center_horizontal"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="@dimen/table_item_table_text_size"
        android:textStyle="bold"
        tools:text="@string/example_table_name" />
</LinearLayout>