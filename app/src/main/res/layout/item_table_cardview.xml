<?xml version="1.0" encoding="utf-8"?>
<com.mwaiterdev.waiter.ui.base.customview.SquareCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height= "0dp"
    app:layout_constraintDimensionRatio="1"
    app:rippleColor="@color/blue"
    android:layout_margin="10dp"
    app:cardCornerRadius="15dp"
    android:orientation="vertical">
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_blue_200"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/table_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="@dimen/item_table_cardview_textsize"
            android:layout_margin="@dimen/item_table_cardview_margin"
            tools:text="Table 1"/>
        <TextView
            android:id="@+id/time_booked"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="end"
            android:textSize="@dimen/item_table_cardview_textsize"
            android:textStyle="bold"
            android:layout_margin="@dimen/item_table_cardview_margin"
            tools:text="14:35"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/icon_print_bill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/item_table_cardview_margin"
            android:background="@android:color/transparent"
            android:src="@drawable/circle_printer_blue"
            />
        <TextView
            android:id="@+id/waitress_observe"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center|end"
            android:textStyle="bold"
            android:textSize="@dimen/item_table_cardview_textsize"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_margin="@dimen/item_table_cardview_margin"
            tools:text="Петров П."/>
    </LinearLayout>
    <TextView
        android:id="@+id/items_text"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_of_order_items_bills_fragment"
        android:layout_weight="3"
        android:lineSpacingExtra="@dimen/space_between_orders_item"
        android:layout_margin="5dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/color_blue_200"
        android:orientation="horizontal">
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/icon_count_customers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/ic_customer_count"
            />
        <TextView
            android:id="@+id/count_of_bills"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:textSize="@dimen/item_table_cardview_textsize"
            android:textStyle="bold"
            android:layout_margin="10dp"
            tools:text="2"/>

        <TextView
            android:id="@+id/total_bill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="2"
            android:gravity="center|end"
            android:textSize="@dimen/item_table_cardview_textsize"
            android:textStyle="bold"
            tools:text="1555.00" />
    </LinearLayout>
    </androidx.appcompat.widget.LinearLayoutCompat>

</com.mwaiterdev.waiter.ui.base.customview.SquareCardView>